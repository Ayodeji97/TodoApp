<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/fragment_profile_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_details_str"
        android:layout_marginTop="37dp"
        android:layout_marginStart="37dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Circular image view -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_create_profile_one_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_profile_details_tv" />

    <ImageView
        android:id="@+id/fragment_profile_add_image_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_add_image"
        app:layout_constraintEnd_toEndOf="@+id/fragment_create_profile_one_iv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/fragment_create_profile_one_iv"
        app:layout_constraintTop_toTopOf="@+id/fragment_create_profile_one_iv" />

    <TextView
        android:id="@+id/fragment_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daniel_ayodeji_str"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_create_profile_one_iv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>